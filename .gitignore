# ---------------------------------
# Rails API Project .gitignore
# ---------------------------------

# Bundler config
/.bundle

# Logs
/log/*
!/log/.keep

# Temp files
/tmp/*
!/tmp/.keep

# PID files
/tmp/pids/*
!/tmp/pids/.keep

# Uploaded files (Active Storage)
# Chỉ ignore trong development, giữ file trên production nếu dùng S3 thì không cần ignore
/storage/*
!/storage/.keep

# Credentials / Secrets
/config/master.key
/config/credentials.yml.enc
.env
.env.*

# Debugger history
.byebug_history

# Bootsnap cache
/tmp/cache
/tmp/spring

# ---------------------------------
# IDE / Editor
# ---------------------------------
.vscode/
.idea/

# ---------------------------------
# OS-specific files
# ---------------------------------
.DS_Store
Thumbs.db

# ---------------------------------
# Node & Frontend
# ---------------------------------
node_modules/
yarn-error.log

# ---------------------------------
# Test coverage & profiling
# ---------------------------------
coverage/
spec/examples.txt

# ---------------------------------
# RBS & TypeProf
# ---------------------------------
.rbs_collection/
.rbs_collection.lock.yaml
.gem_rbs_collection/
